<configuration>
	<appender name="FILE" class="ch.qos.logback.core.FileAppender">
		<file>/dev/null</file>
		<encoder>
			<pattern>%highlight(%-5level) %cyan(%logger{15}) %yellow(%mdc) %msg%n%ex</pattern>
		</encoder>
	</appender>
	<root level="DEBUG">
		<appender-ref ref="FILE" />
	</root>
</configuration>
